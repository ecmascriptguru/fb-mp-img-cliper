{
   "background": {
      "scripts": [
         "assets/js/jquery.min.js",
         "assets/js/utils.js",
         "assets/js/background.js"
      ]
   },
   "browser_action": {
      "default_icon": "assets/icons/48.png",
      "default_popup": "assets/html/popup.html",
      "default_title": "__MSG_extension_name__"
   },
   "content_scripts": [
      {
         "js": [ "assets/js/jquery.min.js", "assets/js/facebook.js" ],
         "matches": [ "*://*.facebook.com/*" ],
         "runt_at": "document_idle"
      },
      {
         "js": [ "assets/js/jquery.min.js", "assets/js/utils.js", "assets/js/walmart.js" ],
         "matches": [ "*://*.walmart.com/*" ],
         "runt_at": "document_idle"
      },
      {
         "matches": ["https://i5.walmartimages.com/"],
         "js": ["assets/js/utils.js", "assets/js/walmart_image_copier.js"],
         "runt_at": "document_idle"
      }
   ],
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
   "default_locale": "en",
   "description": "__MSG_extension_description__",
   "icons": {
      "128": "assets/icons/128.png",
      "32": "assets/icons/32.png",
      "48": "assets/icons/48.png"
   },
   "manifest_version": 2,
   "minimum_chrome_version": "58",
   "name": "__MSG_extension_name__",
   "short_name": "__MSG_extension_short_name__",
   "permissions": [ "*://*.facebook.com/*", "https://www.walmat.com/*", "https://i5.walmartimages.com/*", 
      "storage", "background", "tabs", "notifications", "clipboardWrite", "clipboardRead" ],
   "web_accessible_resources": ["https://i5.walmartimages.com/*"],
   "version": "1.0.0"
}
